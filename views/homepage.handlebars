        </div>
        <div class="card-action">
          <a href="#">My Posts</a>
        </div>
      </div>
    </div>
  </div>


  {{#each posts as |post|}}
  <div class="row">
    <div class="col s12 m6">
      <div class="card center blue-grey darken-1">
        <div class="card-content white-text">
          {{!-- <span class="card-title">User Post</span> --}}
          <p>{{post.description}}</p>
        </div>
        {{!-- <div class="card-action">
          <a href="mailto:{{user.email}}">{{post.description}}</a>
        </div> --}}
      </div>
    </div>
  </div>
</div>
