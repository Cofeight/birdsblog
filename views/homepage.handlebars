
  <div class="row">
    <form class="col s12" id="post-input">
      <div class="row post-input">
        <div class="input-field col s8">
          <i class="material-icons prefix">nature_people</i>
          <input id="post-description" type="text" class="validate" placeholder="Add Post">
          <label for="icon-prefix"></label>
        </div>
        <div class="input-field col s4">
          <i class="material-icons prefix">add_location</i>
          <input id="location" type="tel" class="validate" placeholder="Add Location">
          <label for="icon-prefix"></label>
        </div>
        <button>Submit Post</button>
      </div>
    </form>
  </div>
  
 {{#each users as |user| }}
 <div class="row">
    <div class="col s12 m7">
      <div class="card">
